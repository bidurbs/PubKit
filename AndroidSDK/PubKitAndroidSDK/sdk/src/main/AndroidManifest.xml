<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.pubkit">
    <uses-sdk android:minSdkVersion="9" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission android:name="com.pubkit.gcm.permission.C2D_MESSAGE" android:protectionLevel="signature" />
    <uses-permission android:name="com.pubkit.gcm.permission.C2D_MESSAGE" />

    <application>
        <receiver android:name=".service.PubKitGcmBroadcastReceiver" android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="com.pubkit" />
            </intent-filter>
        </receiver>
        <service android:name=".service.PubKitGcmIntentService" />
    </application>
</manifest>
